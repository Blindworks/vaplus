<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
    version="2.2">
	<render-kit>
	    <renderer>
	        <component-family>javax.faces.Messages</component-family>
	        <renderer-type>javax.faces.Messages</renderer-type>
	        <renderer-class>de.vaplus.client.ui.BootstrapMessagesRenderer</renderer-class>
	    </renderer>
	    <renderer>
	        <description>Multiple File Renderer</description>
	        <component-family>javax.faces.Input</component-family>
	        <renderer-type>javax.faces.File</renderer-type>
	        <renderer-class>de.vaplus.client.ui.MultipleFileRenderer</renderer-class>
	    </renderer>
	</render-kit>
	<factory>
		<exception-handler-factory>de.vaplus.client.ui.SupportExceptionHandlerFactory</exception-handler-factory>
	</factory>
	
</faces-config>
